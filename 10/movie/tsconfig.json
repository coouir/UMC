{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["types", "./node_modules/@types"],
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}